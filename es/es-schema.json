{
  "settings" : {
    "number_of_shards" : 1,
    "number_of_replicas" : 1
  },
  "mappings": {
    "unit": {
      "_source": {
        "enabled": true
      },
      "properties" : {
        "donor": {
          "type": "string",
          "index": "not_analyzed"
        },
        "contact-mode" : {
          "type" : "string",
          "index": "not_analyzed"
        },
        "food-type": {
          "type": "string",
          "index": "not_analyzed"
        },
        "quantity": {
          "type": "float",
          "index": "not_analyzed"
        },
        "for": {
          "type": "string",
          "index": "not_analyzed"
        },
        "for-name": {
          "type": "string",
          "index": "analyzed"
        },
        "food-info": {
          "type": "string",
          "index": "analyzed"
        },
        "pick-up-addr": {
          "type": "object",
          "properties" : {
            "street" : { "type" : "string", "index": "analyzed" },
            "city" : { "type" : "string", "index": "not_analyzed" },
            "state": { "type" : "string", "index": "not_analyzed" },
            "zip": { "type" : "integer", "index": "not_analyzed" }
          }
        },
        "pick-up-coord": {
          "type": "geo_point"
        },
        "pick-up-timings": {
          "type" : "object",
          "properties" : {
            "start" : {
              "type": "date",
              "format": "yyyy-MM-dd HH:mm:ss",
              "index": "not_analyzed"
            },
            "end" : {
              "type": "date",
              "format": "yyyy-MM-dd HH:mm:ss",
              "index": "not_analyzed"
            }
          }
        },
        "comment": {
          "type": "string",
          "index": "analyzed"
        },
        "refrigeration": {
          "type": "boolean",
          "index": "not_analyzed"
        },
        "est-expire-time": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss",
          "index": "not_analyzed"
        },
        "status": {
          "type": "string",
          "index": "not_analyzed"
        },
        "recipient": {
          "type": "string",
          "index": "not_analyzed"
        }
      }
    }
  }
}